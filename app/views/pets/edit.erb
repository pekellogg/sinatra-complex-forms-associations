<h1>Update Pet</h1>

<h2>Edits for <%=@pet.name%></h2>

  <form method="POST" action="/pets/<%=@pet.id%>">
    <input value="PATCH" id="hidden" type="hidden" name="_method">
    <label>Edit the Pet's Name:</label>
    <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
    <%Owner.all.each do |owner|%>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
    <%end%>

    <h3>New Owner</h3>
    <label>Owner Name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>

    <input type="submit" value="Update Pet">
  </form>
